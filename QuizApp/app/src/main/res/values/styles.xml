<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#9E3B7E</item>
        <item name="colorPrimaryDark">#d8b0cb</item>
        <item name="colorAccent">#00b300</item>
    </style>

    <!-- Style for questions text -->
    <style name="QuestionTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <!-- Style for Radio Group -->
    <style name="AnswersRadioGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <!-- Style for Radio Button -->
    <style name="RadioBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Style for check box -->
    <style name="checkBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Style for Horizontal Line -->
    <style name="HorizontalLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#00395f</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
